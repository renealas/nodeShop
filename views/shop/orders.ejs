<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>No Existen Ordernes!</h1>
            <% } else { %>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <h1>Orden - # <%= order._id %> - <a href="/orders/<%= order._id%>" class="btn"> Descargar Factura</a></h1> 
                            <ul class="orders__products">
                                <% order.products.forEach(p => { %>
                                    <li class="orders__products-item"><%= p.product.title %> (Cantidad: <%= p.quantity %>) $<%= p.totalProduct %></li>
                                <% }); %>
                            </ul>
                            <hr>
                            <h1>Total - $ <%= order.total.totalOrder %> </h1>
                        </li>                        
                    <% }); %>
                </ul>                
            <% } %>           
        </main>
        <%- include('../includes/end.ejs') %>